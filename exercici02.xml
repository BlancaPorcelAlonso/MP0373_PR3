        <nom>Els Catarres</nom>
        <genere>Pop/Folk</genere>
        <web>https://elscatarres.cat</web>


        <integrants>
            <integrant ordre="1">
                <nom_integrant>Èric Vergés</nom_integrant>
            </integrant>
            <integrant ordre="2">
                <nom_integrant>Jan Riera</nom_integrant>
            </integrant>
        </integrants>

        <num_concerts>25</num_concerts>
        <num_fans>
            30000</num_fans>
    </grup_musica>

    <grup_musica num_integrants="3" genere_principal="rock">
